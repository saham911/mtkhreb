<odoo>
    <template id="hyperpay_payment_form" name="HyperPay Payment Form">
        <t t-call="payment.payment_acquirer_form">
            <form id="hyperpay_payment_form" t-attf-action="#" class="o_payment_form">
                <input type="hidden" name="acquirer_id" t-att-value="acquirer.id"/>
                <div class="payment-form" style="display:none;">
                    <div class="form-group">
                        <label for="card_number">Card Number</label>
                        <div id="card-number" class="input-group"></div>
                    </div>
                    <div class="form-group">
                        <label for="expiry_date">Expiry Date</label>
                        <div id="expiry-date" class="input-group"></div>
                    </div>
                    <div class="form-group">
                        <label for="cvv">CVV</label>
                        <div id="cvv" class="input-group"></div>
                    </div>
                    <div class="form-group">
                        <label for="card_holder">Card Holder Name</label>
                        <div id="card-holder" class="input-group"></div>
                    </div>
                    <button type="submit" class="btn btn-primary">Pay Now</button>
                </div>
            </form>
        </t>
    </template>
</odoo>