<record id="view_payment_acquirer_form_inherit" model="ir.ui.view">
    <field name="name">payment.acquirer.form.inherit</field>
    <field name="model">payment.acquirer</field>
    <field name="inherit_id" ref="payment.view_payment_acquirer_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='provider']" position="after">
            <field name="hyperpay_access_token" string="Access Token" 
                attrs="{'invisible': [('provider', '!=', 'hyperpay')]}"/>
            <field name="hyperpay_entity_id" string="Entity ID (Visa/Master)" 
                attrs="{'invisible': [('provider', '!=', 'hyperpay')]}"/>
            <field name="hyperpay_mada_entity_id" string="Entity ID (MADA)" 
                attrs="{'invisible': [('provider', '!=', 'hyperpay')]}"/>
        </xpath>
    </field>
</record>