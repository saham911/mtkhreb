<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- تغيير المعرف الخارجي للوراثة -->
        <record id="view_payment_acquirer_hyperpay" model="ir.ui.view">
            <field name="name">payment.acquirer.hyperpay.form</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='provider']" position="after">
                    <field name="hyperpay_access_token" string="Access Token"
                        attrs="{'invisible': [('provider', '!=', 'hyperpay')]}"/>
                    <field name="hyperpay_entity_id" string="Visa/Master Entity ID"
                        attrs="{'invisible': [('provider', '!=', 'hyperpay')]}"/>
                    <field name="hyperpay_mada_entity_id" string="MADA Entity ID"
                        attrs="{'invisible': [('provider', '!=', 'hyperpay')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>